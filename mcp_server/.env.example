# Hemingwix Notion MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# Notion Integration Token
# Get this from: https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database IDs
# Get these from your Notion database URLs
# Format: database_id is the part after the last dash in the URL
# Example: https://www.notion.so/workspace/Database-Name-123abc456def789ghi -> 123abc456def789ghi

# Characters Database ID
NOTION_CHARACTERS_DB_ID=your_characters_database_id

# Chapters Database ID  
NOTION_CHAPTERS_DB_ID=your_chapters_database_id

# Plot Points Database ID
NOTION_PLOT_DB_ID=your_plot_database_id

# Research Database ID
NOTION_RESEARCH_DB_ID=your_research_database_id

# Optional: Logging level
LOG_LEVEL=INFO

# Optional: Server configuration
MCP_SERVER_NAME=hemingwix-notion
MCP_SERVER_VERSION=1.0.0